{% extends 'base.html.twig' %}

{% block title %}
	Commander un article
{% endblock %}


{% block body %}

	<div class="container">
		<h1 class="mt-4">
			Commander un article
		</h1>


		{{ form_start(form) }}
		<div class="row">
			<div class="col-md-6">{{ form_row(form.quantity)}}</div>
		</div>

		<div class="row">
			<div class="col-md-3">{{ form_row(form.name)}}</div>
			<div class="col-md-3">{{ form_row(form.firstname)}}</div>
			<div class="col-md-3">{{ form_row(form.email)}}</div>
			<div class="col-md-3">{{ form_row(form.phoneNumber)}}</div>
		</div>

		<div class="row">
			<div class="col-md-3">{{ form_row(form.siret)}}</div>
			<div class="col-md-3">{{ form_row(form.address)}}</div>
			<div class="col-md-3">{{ form_row(form.postalCode)}}</div>
			<div class="col-md-3">{{ form_row(form.city)}}</div>
		</div>

		{{ form_end(form) }}

	</div>
{% endblock %}
